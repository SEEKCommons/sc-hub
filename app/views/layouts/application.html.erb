<!DOCTYPE html>
<html>
  <head>
    <title>Michigan Sustainability Cases</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_tag do %>
      window.i18n = {}
      window.i18n.locale = '<%=I18n.locale%>'
    <% end %>

    <script src="https://use.typekit.net/adn1xoi.js"></script>
    <script>try{Typekit.load({ async: true  });}catch(e){}</script>
  </head>

  <body>
    <header>
      <%= link_to root_path do %>
        <h1 id="logo"><%= inline_svg 'msc-logo.svg' %></h1>
      <% end %>
      <% if reader_signed_in? %>
        <div id="reader-menu">
          <div id="reader-menu-dismiss" class="hidden menu-dismiss"></div>
          <ul id="reader-menu-dropdown" class="hidden">
            <li><%=link_to t('reader.show.my_account'), '#'%></li>
            <li><%=link_to t('devise.sessions.destroy'), destroy_reader_session_path, method: :delete %></li>
          </ul>
          <div id="reader-icon">
            <%= current_reader.initials %>
          </div>
          <span class="dropdown-caret"></span>
        </div>
      <% end %>
    </header>

    <% if flash[:notice] %>
      <div class="flash flash-notice"><%= flash[:notice] %></div>
    <% end %>
    <% if flash[:alert] %>
      <div class="flash flash-alert"><%= flash[:alert] %></div>
    <% end %>

    <%= yield %>

    <script>
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

      ga('create', 'UA-72782607-1', 'auto');
    </script>
  </body>
</html>
