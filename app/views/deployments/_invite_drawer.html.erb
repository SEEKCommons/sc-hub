<div class="deployment__invite__drawer" data-controller="clipboard">
  <div class="deployment__invite__instructions">
    <%= t '.invite_instructions_html' %>
  </div>

  <div class="deployment__invite__link pt-control-group">
    <div class="pt-input-group pt-fill">
      <span class="pt-icon pt-icon-new-person"></span>
      <input
        aria-label="<%= I18n.t 'deployments.deployment.invite_link',
                               case_kicker: deployment.case.kicker,
                               group_name: deployment.group.name %>"
        class="pt-input"
        data-target="clipboard.source"
        value="<%= deployment.magic_link %>"
      />
    </div>
    <button class="pt-button pt-icon-clipboard" data-action="clipboard#copy">
      <%= t 'helpers.copy' %>
    </button>
  </div>
</div>
