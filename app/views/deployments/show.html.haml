  = deployment.group.name

.admin.md-container.pt-dark
  %header.md-header
    %ul.pt-breadcrumbs
      %li
        = link_to deployments_path, class: %w[pt-breadcrumb] do
          = t 'deployments.index.my_deployments'
      %li
        %a.pt-breadcrumb.pt-disabled= deployment.group.name

    %h1.admin__title
      = t '.deployment_of_html', kase: deployment.case.kicker,
                                 kase_path: url_for(deployment.case)

  %aside.md-master
    .spaced.deployment.deployment--active
      = render 'invite_drawer', deployment: deployment

  %main.md-detail
    %h2.admin__title= t '.enrolled_learners'

    %table.admin__table.pt-html-table
      %thead
        %th(scope="col")= t 'activerecord.attributes.reader.name'
        %th(scope="col")= t '.pretest'
        %th(scope="col")= t '.case_completion'
        %th(scope="col")= t '.posttest'

      %tbody
        - deployment.reader_progressions.each do |progression|
          %tr
            %th(scope="row")= progression.reader_name

            %td
              - if !deployment.pretest_assigned?
                = t 'helpers.n_a'
              - elsif progression.pretest_submitted?
                %span.pt-icon.pt-icon-tick
                = progression.pretest_submission.score

            %td= number_to_percentage progression.completed_fraction * 100,
                                      precision: 0

            %td
              - if !deployment.posttest_assigned?
                = t 'helpers.n_a'
              - elsif progression.posttest_submitted?
                %span.pt-icon.pt-icon-tick
                = progression.posttest_submission.score
