- classes = "BillboardTitle catalog-case #{"catalog-case-unpublished" unless c.published}"
- background = "background-image:linear-gradient(rgba(0, 0, 0, 0.0), rgba(0, 0, 0, 0.5)), url(#{c.cover_url})"
=link_to (c.published || current_user.can_update?(c) ? c : ''), class: classes, style: background do
  - unless c.published
    .catalog-case-unpublished-banner
      =t '.forthcoming'
  .catalog-case-credits
    %h1=title_for_catalog c
    %h4{style: c.featured? ? "" : "display: none"}=c.case_authors
