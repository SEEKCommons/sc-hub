<h2><%= t('devise.sessions.new.sign_in') %></h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <%= f.label :email do%>
    <%= t "activerecord.attributes.user.email" %>
    <%= f.email_field :email, class: "pt-input pt-fill", autofocus: true, spellcheck: false %>
  <% end %>

  <%= f.label :password do %>
    <%= t "activerecord.attributes.user.password" %>
    <%= f.password_field :password, class: "pt-input pt-fill", autocomplete: "off" %>
  <% end %>

  <% if devise_mapping.rememberable? -%>
    <%= f.label :remember_me, class: "field pt-control pt-checkbox" do %>
      <%= t "activerecord.attributes.user.remember_me" %>
      <%= f.check_box :remember_me %>
      <span class="pt-control-indicator"></span>
    <% end %>
  <% end -%>

  <%= f.submit t('devise.sessions.new.sign_in'), class: "o-button pt-button pt-intent-primary" %>
<% end %>

<%= render "devise/shared/links" %>
