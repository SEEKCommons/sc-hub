<div class="reading-list__actions">
  <%= link_to edit_reading_list_path(reading_list),
              class: %i[pt-button pt-icon-edit] do %>
    <%= t 'reading_lists.edit.edit_list' %>
  <% end %>

  <%= button_to reading_list_path(reading_list), method: :delete,
                aria: { label: I18n.t('reading_lists.destroy.delete') },
                data: { confirm: I18n.t('reading_lists.destroy.are_you_sure') },
                class: %i[pt-button pt-minimal pt-intent-danger
                          pt-icon-trash] do %><% end %>
</div>

<p class="reading-list__tag">
  <%= t '.sharing_instructions' %>
</p>
