<% saved = reading_list.saved_by? current_reader %>

<button
  class="pt-button pt-intent-success pt-icon-add <%= 'hidden' if saved %>"
  data-action="reading-list#save"
  data-target="reading-list.saveButton"
>
  <%= t '.save_reading_list' %>
</button>

<div
  class="reading-list__actions <%= 'hidden' unless saved %>"
  data-target="reading-list.savedTag"
>
  <div class="reading-list__tag">
    <span class="pt-icon pt-icon-tick"></span>
    <%= t '.reading_list_saved' %>
  </div>

  <button
    class="pt-button pt-minimal pt-intent-danger pt-icon-cross
           pt-button--baseline-aligned"
    aria-label="<%= I18n.t('saved_reading_lists.destroy.remove_list') %>"
    data-action="reading-list#unsave"
  ></button>
</div>
